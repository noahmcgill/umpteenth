{
    "name": "@umpteenth/browser",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "lint-staged": {
        "*.{ts,js}": [
            "prettier --write",
            "eslint --fix",
            "git add"
        ]
    },
    "scripts": {
        "build": "tsc && vite build",
        "generate:sourcemap": "npx @sentry/wizard@latest -i sourcemaps",
        "bundle:analyze": "npx vite-bundle-visualizer",
        "dev:base": "concurrently -k \"vite build --watch\" \"npx serve dist -l 3006\"",
        "dev": "concurrently -k \"vite build --watch\" \"npx serve dist -l 3006\"",
        "build:watch": "vite build --watch",
        "release": "npx tsx scripts/release.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "lint": "eslint . --ext .ts,.js",
        "lint:fix": "eslint . --ext .ts,.js --fix",
        "prepare": "husky",
        "test": "vitest run src/**",
        "test:size": "vitest run tests/build/bundle-size.test.ts",
        "test:ci": "npm run build && npm run test:size"
    },
    "devDependencies": {
        "@aws-sdk/client-s3": "^3.956.0",
        "@eslint/js": "^9.37.0",
        "@types/node": "^25.0.9",
        "@typescript-eslint/eslint-plugin": "^8.46.0",
        "@typescript-eslint/parser": "^8.46.0",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "eslint": "^9.37.0",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jsdom": "^27.4.0",
        "lint-staged": "^16.2.3",
        "prettier": "^3.6.2",
        "serve": "^14.2.5",
        "tsx": "^4.20.6",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.0",
        "vite": "^7.1.7",
        "vite-tsconfig-paths": "^6.0.4",
        "vitest": "^4.0.17",
        "wait-on": "^9.0.3"
    }
}
